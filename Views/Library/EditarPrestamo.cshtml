@model VisualizadorEstructuras.Models.Prestamo
@{
    ViewData["Title"] = "Editar Préstamo";
    var libros = ViewBag.Libros as List<VisualizadorEstructuras.Models.Libro> ?? new List<VisualizadorEstructuras.Models.Libro>();
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <a href="@Url.Action("HistorialTransacciones", "Library")" class="btn btn-secondary">Volver a Préstamos</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="fas fa-edit"></i> Editar Préstamo</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditarPrestamo" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LibroId" class="form-label">Libro</label>
                                    <select asp-for="LibroId" class="form-select">
                                        <option value="">Seleccionar libro...</option>
                                        @foreach (var libro in libros)
                                        {
                                            if (Model.LibroId == libro.Id)
                                            {
                                                <option value="@libro.Id" selected>@libro.Titulo - @libro.Autor</option>
                                            }
                                            else
                                            {
                                                <option value="@libro.Id">@libro.Titulo - @libro.Autor</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NombreUsuario" class="form-label">Nombre del Usuario</label>
                                    <input asp-for="NombreUsuario" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FechaPrestamo" class="form-label">Fecha de Préstamo</label>
                                    <input asp-for="FechaPrestamo" type="datetime-local" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FechaDevolucion" class="form-label">Fecha de Devolución</label>
                                    <input asp-for="FechaDevolucion" type="datetime-local" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-save"></i> Actualizar Préstamo
                                </button>
                                <a href="@Url.Action("HistorialTransacciones", "Library")" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancelar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 