@model VisualizadorEstructuras.Models.Reserva
@{
    ViewData["Title"] = "Editar Reserva";
    var libros = ViewBag.Libros as List<VisualizadorEstructuras.Models.Libro> ?? new List<VisualizadorEstructuras.Models.Libro>();
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <a href="@Url.Action("Reservas", "Library")" class="btn btn-secondary">Volver a Reservas</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="fas fa-edit"></i> Editar Reserva</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditarReserva" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LibroId" class="form-label">Libro</label>
                                    <select asp-for="LibroId" class="form-select">
                                        <option value="">Seleccionar libro...</option>
                                        @foreach (var libro in libros)
                                        {
                                            if (Model.LibroId == libro.Id)
                                            {
                                                <option value="@libro.Id" selected>@libro.Titulo - @libro.Autor</option>
                                            }
                                            else
                                            {
                                                <option value="@libro.Id">@libro.Titulo - @libro.Autor</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NombreSolicitante" class="form-label">Nombre del Solicitante</label>
                                    <input asp-for="NombreSolicitante" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FechaSolicitud" class="form-label">Fecha de Solicitud</label>
                                    <input asp-for="FechaSolicitud" type="datetime-local" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FechaExpiracion" class="form-label">Fecha de Expiraci√≥n</label>
                                    <input asp-for="FechaExpiracion" type="datetime-local" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="Activa" class="form-check-input" />
                                        <label asp-for="Activa" class="form-check-label">
                                            Reserva activa
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-save"></i> Actualizar Reserva
                                </button>
                                <a href="@Url.Action("Reservas", "Library")" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancelar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 